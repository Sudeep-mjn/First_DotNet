@model IEnumerable<BankTransactions.Models.Transaction>

@{
    ViewData["Title"] = "Index";
}

<h1>PassBook</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AccountName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BeneficiaryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BankName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SWIFTCode)
            </th>
           @*  <th>
                @Html.DisplayNameFor(model => model.Date)
            </th> *@
            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>
            
            <th>
                <a asp-action="AddOrCreate" class="btn btn-sm btn-success"> <i class="fa-solid fa-plus"></i>  New</a>
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AccountName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BeneficiaryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BankName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SWIFTCode)
            </td>
              @*   <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td> *@
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            
            <td>
                    <a asp-action="Edit" asp-route-id="@item.TransactionId" class="btn btn-warning">
                        <i class="fa-solid fa-pen"></i>
                </a> 
                <a asp-action="Details" asp-route-id="@item.TransactionId" class="btn btn-primary" >
                        <i class="fa-solid fa-magnifying-glass"></i>
                    </a> 
                <a asp-action="Delete" asp-route-id="@item.TransactionId" class="btn btn-danger" >
                        <i class="fa-solid fa-trash"></i>
                </a>
            </td>
        </tr>
}
    </tbody>
</table>
